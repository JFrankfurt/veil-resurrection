# Predictions V2 Environment Variables
# Copy this file to .env.local and fill in the values

# =============================================================================
# Required Configuration
# =============================================================================

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
VITE_WALLETCONNECT_PROJECT_ID=your_project_id_here

# =============================================================================
# Contract Deployment (for foundry scripts)
# =============================================================================

# Deployer private key (keep secure, never commit!)
PRIVATE_KEY=

# RPC URL for Base Sepolia testnet
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# RPC URL for Base mainnet
BASE_MAINNET_RPC_URL=https://mainnet.base.org

# Basescan API key for contract verification
BASESCAN_API_KEY=

# =============================================================================
# Contract Addresses (filled after deployment)
# =============================================================================

# Base Sepolia (testnet)
VITE_MARKET_FACTORY_ADDRESS_BASE_SEPOLIA=
VITE_ROUTER_ADDRESS_BASE_SEPOLIA=
VITE_RESOLVER_ADDRESS_BASE_SEPOLIA=
VITE_USDC_ADDRESS_BASE_SEPOLIA=

# Base Mainnet (production)
VITE_MARKET_FACTORY_ADDRESS_BASE_MAINNET=
VITE_ROUTER_ADDRESS_BASE_MAINNET=
VITE_RESOLVER_ADDRESS_BASE_MAINNET=
VITE_USDC_ADDRESS_BASE_MAINNET=

# =============================================================================
# Subgraph Configuration
# =============================================================================

# The Graph hosted service subgraph URL (testnet)
VITE_SUBGRAPH_URL_TESTNET=

# The Graph hosted service subgraph URL (mainnet)
VITE_SUBGRAPH_URL_MAINNET=

# The Graph API key (for production deployments)
GRAPH_API_KEY=

# =============================================================================
# Optional Configuration
# =============================================================================

# Enable development mode features
VITE_DEV_MODE=false

# Default chain ID (84532 = Base Sepolia, 8453 = Base Mainnet)
VITE_DEFAULT_CHAIN_ID=84532

# Protocol fee recipient address
FEE_RECIPIENT_ADDRESS=

# Protocol fee in basis points (default: 100 = 1%)
PROTOCOL_FEE_BPS=100

# Initial resolver operator addresses (comma-separated)
RESOLVER_OPERATORS=
